{
    "name": "loevgaard/dandomain-import-export",
    "type": "library",
    "description": "This library makes it easier to handle imports and exports to and from the Dandomain webshop",
    "homepage": "https://github.com/loevgaard/dandomain-import-export",
    "license": "MIT",
    "authors": [
        {
            "name": "Joachim Loevgaard",
            "email": "joachim@loevgaard.dk"
        }
    ],
    "require": {
        "php": "~7.1",
        "guzzlehttp/guzzle": "^6.0",
        "symfony/options-resolver": "^3.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "~5.5||~6.0"
    },
    "autoload": {
        "psr-4": {
            "Loevgaard\\DandomainImportExport\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Loevgaard\\DandomainImportExport\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "./vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "fix-style": "./vendor/bin/php-cs-fixer fix --verbose"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
